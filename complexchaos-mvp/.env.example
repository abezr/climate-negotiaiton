# ComplexChaos MVP Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# DATABASE
# ============================================================================

# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
# 
# Local development:
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/complexchaos?schema=public"
#
# Supabase (recommended for quick setup):
# DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"
#
# Railway.app:
# DATABASE_URL="postgresql://postgres:[PASSWORD]@[HOST].railway.app:[PORT]/railway"

# ============================================================================
# OPENAI API
# ============================================================================

# Required: Get from https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-..."

# Optional: Organization ID (for tracking usage by org)
OPENAI_ORG_ID=""

# ============================================================================
# NEXT.JS
# ============================================================================

# Base URL of your application
# Development:
NEXTAUTH_URL="http://localhost:3000"
# Production:
# NEXTAUTH_URL="https://your-domain.com"

# Secret for NextAuth.js (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="generate-this-with-openssl-rand-base64-32"

# ============================================================================
# OPTIONAL: REDIS (for caching LLM responses)
# ============================================================================

# Redis connection string
# Local:
# REDIS_URL="redis://localhost:6379"
#
# Upstash (free tier available):
# REDIS_URL="rediss://default:[PASSWORD]@[HOST]:6379"

# ============================================================================
# OPTIONAL: FILE STORAGE (for audio/document uploads)
# ============================================================================

# Google Cloud Storage
# GCS_BUCKET_NAME="complexchaos-files"
# GCS_PROJECT_ID="your-project-id"
# GOOGLE_APPLICATION_CREDENTIALS="./service-account-key.json"

# AWS S3
# AWS_S3_BUCKET="complexchaos-files"
# AWS_REGION="us-east-1"
# AWS_ACCESS_KEY_ID="..."
# AWS_SECRET_ACCESS_KEY="..."

# ============================================================================
# DEVELOPMENT
# ============================================================================

# Node environment
NODE_ENV="development"

# Enable verbose logging
# DEBUG="true"
